<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTO Mapper 3.0 //EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.model.dao.LimitsMapper">
    <resultMap id="PowerMapResult" type="org.example.model.entity.Limits">
        <result column="power_id" property="pId"/>
        <result column="power_name" property="pName"/>
        <result column="power_type" property="pType"/>
        <result column="power_create_time" property="pDate"/>
        <result column="power_notes" property="pNote"/>
    </resultMap>
    <insert id="insert" parameterType="org.example.model.entity.Limits" >
        insert into sys_power (power_id, power_name, power_type,power_create_time,power_notes)
        values (#{pId}, #{pName}, #{pType}, #{pDate},#{pNote},);
    </insert>

    <delete id="delete" parameterType="org.example.model.entity.Limits">
        delete
        from sys_power
        where power_id = #{pId};
    </delete>

    <update id="update" parameterType="org.example.model.entity.Limits" >
        update sys_power
        set power_name=#{pName},
            power_type=#{pType},
            power_create_time=#{pDate},
            power_notes=#{pNote},

        where power_name = #{pName}
    </update>

    <select id="selectOne" resultType="org.example.model.entity.Limits" resultMap="PowerMapResult">
        select power_id,
               power_name,
               power_type,
               power_create_time,
               power_notes
        from sys_power
        where power_id = #{pId}
    </select>

    <select id="selectAll" resultType="org.example.model.entity.Limits" resultMap="PowerMapResult">
        select power_id,
               power_name,
               power_type,
               power_create_time,
               power_notes
        from sys_power;
    </select>
</mapper>

